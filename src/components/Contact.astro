---
import { site } from "../data/site";
---

<section id="contact" class="section">
  <div class="card">
    <div class="grid gap-6 lg:grid-cols-12 lg:items-center">
      
      <!-- Left content -->
      <div class="lg:col-span-7">
        <h2>Contact</h2>
        <p class="mt-2 text-zinc-700 dark:text-zinc-300">
          Prefer a quick quote? Use the popup form — share your goal, data source/website,
          and expected output.
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <button
            type="button"
            class="btn btn-primary no-underline"
            data-open-contact
          >
            Open contact form
          </button>
        </div>

        <p class="mt-4 text-sm text-zinc-600 dark:text-zinc-400">
          Typical reply time: <b>&lt; 12 hours</b>. If it’s urgent, mention it in the message.
        </p>
      </div>

      <!-- Right card -->
      <div class="lg:col-span-5">
        <div class="rounded-2xl border border-zinc-200 bg-zinc-50 p-5 dark:border-zinc-800 dark:bg-zinc-950">
          <p class="text-sm font-semibold">Quick links</p>

          <div class="mt-4 flex flex-col gap-3">

            <!-- LinkedIn -->
            <a
              class="pill flex items-center gap-2 no-underline"
              href={site.socials.linkedin}
              target="_blank"
              rel="noreferrer"
            >
              <!-- LinkedIn Icon -->
              <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                <path
                  fill="currentColor"
                  d="M20.45 20.45h-3.55v-5.4c0-1.29-.03-2.95-1.8-2.95-1.8 0-2.08 1.4-2.08 2.85v5.5H9.47V9h3.4v1.56h.05c.47-.9 1.6-1.85 3.3-1.85 3.52 0 4.17 2.32 4.17 5.33v6.41zM5.34 7.43a2.06 2.06 0 1 1 0-4.12 2.06 2.06 0 0 1 0 4.12zM7.12 20.45H3.56V9h3.56v11.45zM22.23 0H1.77C.79 0 0 .77 0 1.72v20.56C0 23.23.79 24 1.77 24h20.46c.98 0 1.77-.77 1.77-1.72V1.72C24 .77 23.21 0 22.23 0z"
                />
              </svg>
              <span>LinkedIn</span>
            </a>

            <!-- GitHub -->
            <a
              class="pill flex items-center gap-2 no-underline"
              href={site.socials.github}
              target="_blank"
              rel="noreferrer"
            >
              <!-- GitHub Icon -->
              <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                <path
                  fill="currentColor"
                  d="M12 .5C5.73.5.5 5.74.5 12.02c0 5.11 3.29 9.44 7.86 10.97.57.1.78-.25.78-.56v-2c-3.2.7-3.88-1.55-3.88-1.55-.53-1.36-1.3-1.72-1.3-1.72-1.06-.73.08-.72.08-.72 1.17.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.27 3.4.97.1-.76.4-1.27.73-1.56-2.55-.3-5.23-1.28-5.23-5.69 0-1.26.45-2.29 1.19-3.1-.12-.3-.52-1.52.11-3.17 0 0 .97-.31 3.18 1.18a11 11 0 0 1 5.8 0c2.2-1.5 3.17-1.18 3.17-1.18.63 1.65.23 2.87.11 3.17.74.81 1.18 1.84 1.18 3.1 0 4.42-2.68 5.38-5.24 5.67.41.35.78 1.04.78 2.1v3.12c0 .31.21.66.79.55A11.53 11.53 0 0 0 23.5 12C23.5 5.74 18.27.5 12 .5z"
                />
              </svg>
              <span>GitHub</span>
            </a>

            <!-- Email -->
            <a
              class="pill flex items-center gap-2 no-underline"
              href={`mailto:${site.email}`}
            >
              <!-- Mail Icon (neutral, brand-safe) -->
              <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                <path
                  fill="currentColor"
                  d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5-8-5V6l8 5 8-5v2z"
                />
              </svg>
              <span>{site.email}</span>
            </a>

          </div>

          <p class="mt-4 text-xs text-zinc-600 dark:text-zinc-400">
            No spam - your message goes directly to my inbox.
          </p>
        </div>
      </div>

    </div>
  </div>
</section>
